<h1><%= @article.title %></h1>

<% if current_user %>
  <div class="d-grid gap-2 d-md-flex justify-content-md-end mb-2">
    <% if @article.published_at %>
      <% if @article.published_at.past? %>
        <div class="mt-2">This article is public! Published <%= local_time_ago(@article.published_at) %></div>
      <% else %>
        <div class="mt-2">This article will go public on <%= local_time(@article.published_at) %></div>
      <% end %>
    <% else %>
      <div class="mt-2">This article is not scheduled for publication</div>
    <% end %>
    <%= link_to "Edit", edit_article_path(@article), class: 'btn btn-primary' %>
    <%= link_to "Archive", @article, 'data-turbo-method': :delete, class: 'btn btn-danger' %>
  </div>
<% end %>

<%= @article.body %>

<%= link_to "Back", :back, class: 'btn btn-secondary mt-4' %>
