<div id="<%= dom_id article %>" class="col">
  <div class="card bg-light border border-dark rounded-3">
    <div class="card-body">
      <h5 class="card-title"><%= article.title %></h5>
      <p class="card-text">By <%= article.user.name %></p>
      <%= link_to "Read Article", article, class: 'btn btn-outline-primary' %>
    </div>
  </div>
</div>
