<div id="<%= dom_id user %>" class="col">
    <div class="card border-primary">
        <div class="card-body">
            <h5 class="card-title"><%= user.name %></h5>
            <p class="card-text">By <%= user.profile.to_s.truncate(160) %></p>
            <%= link_to "Read Profile", user, class: 'btn btn-outline-secondary' %>
        </div>
    </div>
</div>
