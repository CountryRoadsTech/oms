<h1><%= title @page.title %></h1>
<% if @page.subtitle %>
  <h3><%= @page.subtitle %></h3>
  <% description @page.subtitle %>
  <% keywords (@page.subtitle.split(' ') + @page.body.to_s.split(' ')).join(', ') %>
<% else %>
  <% description @page.body.to_s %>
  <% keywords @page.body.to_s.split(' ') %>
<% end %>

<% if current_user %>
  <div class="d-grid gap-2 d-md-flex justify-content-md-end mb-2">
    <% if @page.published_at %>
      <% if @page.published_at.past? %>
        <div class="mt-2"><i class="bi bi-info-circle"></i> This page is public! Published <%= local_time_ago(@page.published_at) %></div>
      <% else %>
        <div class="mt-2"><i class="bi bi-info-circle"></i> This page will go public on <%= local_time(@page.published_at) %></div>
      <% end %>
    <% else %>
      <div class="mt-2"><i class="bi bi-info-circle"></i> This page is not scheduled for publication</div>
    <% end %>
    <%= link_to edit_page_path(@page), class: 'btn btn-primary' do %>
      <i class="bi bi-pencil-square"></i> Edit
    <% end %>
    <%= link_to @page, 'data-turbo-method': :delete, class: 'btn btn-danger', data: { turbo_confirm: 'Are you sure you wish to archive this page? It will be removed from public view. You will be able to restore it.' } do %>
      <i class="bi bi-archive"></i> Archive
    <% end %>
  </div>
<% end %>

<% if @page.title == 'In Action' %>
  <%= image_tag '/site_photo1.jpg', class: 'img-fluid img-thumbnail mx-auto d-block' %>
  <%= image_tag '/site_photo2.jpg', class: 'img-fluid img-thumbnail mx-auto d-block' %>
  <p class='pt-4'>Team members Julie and Coleen delivering recipients their meal kits. These kits are coupled with online cooking and nutrition lessons.</p>
  <hr>
  <%= image_tag '/site_photo3.jpg', class: 'img-fluid img-thumbnail mx-auto d-block' %>
  <p class='pt-4'>Team members Richard and Graham on our weekly Ottawa Mission donation drop-off.</p>
  <hr>
  <%= image_tag '/site_photo4.jpg', class: 'img-fluid img-thumbnail mx-auto d-block' %>
  <%= image_tag '/site_photo5.jpg', class: 'img-fluid img-thumbnail mx-auto d-block' %>
  <p class='pt-4'>Team members Dan, Richard, and Terry on a typical donation load-up. Generous portions of of produce, dairy, breads, desserts, and more, headed out to community food programs.</p>
<% else %>
  <%= @page.body %>
<% end %>

<%= link_to :back, class: 'btn btn-outline-primary mt-4' do %>
  <i class="bi bi-chevron-left"></i> Back
<% end %>
