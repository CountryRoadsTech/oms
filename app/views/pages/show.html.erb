<h1><%= @page.title %></h1>
<% if @page.subtitle %>
  <h3><%= @page.subtitle %></h3>
<% end %>

<% if current_user %>
  <div class="d-grid gap-2 d-md-flex justify-content-md-end mb-2">
    <% if @page.published_at %>
      <% if @page.published_at.past? %>
        <div class="mt-2">This page is public! Published <%= local_time_ago(@page.published_at) %></div>
      <% else %>
        <div class="mt-2">This page will go public on <%= local_time(@page.published_at) %></div>
      <% end %>
    <% else %>
      <div class="mt-2">This page is not scheduled for publication</div>
    <% end %>
    <%= link_to "Edit", edit_page_path(@page), class: 'btn btn-primary' %>
    <%= link_to "Archive", @page, 'data-turbo-method': :delete, class: 'btn btn-danger' %>
  </div>
<% end %>

<%= @page.body %>

<%= link_to "Back", :back, class: 'btn btn-secondary mt-4' %>
